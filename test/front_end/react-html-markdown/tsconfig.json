{
  "compilerOptions": {
    "paths": {
      "@*": ["./src/*"]
    },
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ES2015"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
