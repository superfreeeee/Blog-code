{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"]
    },
    "target": "ES5",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["ES2015"]
  },
  "include": ["src"],
  "exclude": [
    // dependencies
    "node_modules",

    // test files
    "**/__tests__",

    // sample files
    "**/demos",

    // bundle result
    "lib",
    "es",
    "dist"
  ]
}
