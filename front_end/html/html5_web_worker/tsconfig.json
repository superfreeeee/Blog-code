{
  "compilerOptions": {
    "paths": {
      "@*": ["./src/*"]
    },
    "target": "es5",
    "lib": ["WebWorker", "ScriptHost", "DOM"],
    "allowJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
